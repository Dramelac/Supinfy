@model Supinfy.ViewModel.UserSearchResultVM
@{
    ViewBag.Title = "SearchUser";
}

<h2>SearchUser</h2>

@if (Model.ResultCount == 0)
{
    <h4>Sorry, any result match with your search</h4>
}
else
{
    foreach (var user in Model.ResultList)
    {
        <div class="row">
            <hr />
            <div class="col-md-4">
                <h2>@Html.ActionLink(user.Name, "AddToFiend", new { friendId = user.Id })</h2>
            </div>
        </div>
    }
}
